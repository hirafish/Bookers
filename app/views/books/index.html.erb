<body class="index_body">
  
  <h1 class="index_title">Books</h1>
  
  <div class="book_list">
    
    <tr>
      <th>Title</th> <th>Body</th>
    </tr>
    
    <% @books.each do |book| %>
      <tr>
        <td>book.title</td> <td>book.body</td>
        <td><%= link_to "Show", book_path(book.id) %></td>
      </tr>
    <% end %>
  </div>
  
  <h1>New book</h1>
  <%= form_with model: @book, url: '/books' do |f|%>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Body</h4>
    <%= f.text_area :body %><br/>
    <%= f.submit 'Create book' %>
  <% end %>
  
  
</body>